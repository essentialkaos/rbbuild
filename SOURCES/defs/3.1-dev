PREFIX(openssl-1.1.1v): {prefix}/openssl

CONFOPTS(ruby-3.1): --with-openssl-dir={prefix}/openssl --disable-install-doc

[default]
  package: "openssl-1.1.1v" "https://www.openssl.org/source/openssl-1.1.1v.tar.gz" "!" openssl
  git: "ruby-3.1" "https://github.com/ruby/ruby.git" "ruby_3_1" autoconf

